    <style name="BoldText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RegularText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    
    <style name="ShapeAppearanceSmall" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="ShapeAppearanceMedium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="ShapeAppearanceLarge" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/RegularText</item>
    </style>
    
    <style name="CustomFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

</resources>